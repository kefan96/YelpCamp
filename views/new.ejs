<% include partials/header %>
<div class="container">
  <h1 class="text-center">Create a New Campground</h1>

  <form action="/campgrounds" method="POST">
    <div class="mx-auto my-4" style="width: 30%;">
      <div class="form-group my-1">
        <label for="campgroundname">Campground Name:</label>
        <input class="form-control" type="text" name="name" placeholder="name" id="campgroundname">
      </div>
      <div class="form-group my-1">
        <label for="imageurl">Image URL:</label>
        <input class="form-control" type="text" name="image" placeholder="imageURL" id="imageurl">
      </div>
      <div class="form-group my-1">
        <label for="description">Description:</label>
        <input class="form-control" type="text" name="description" placeholder="description" id="description">
      </div>
      <button type="submit" class="btn btn-secondary btn-block my-4">Submit</button>
      <a href="/campgrounds">Go Back</a>
    </div>
  </form>

</div>
<% include partials/footer %>
