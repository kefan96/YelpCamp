<% include ../partials/header %>
<div class="container">
  <h1 class="text-center">Edit <%= campground.name %></h1>

  <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
    <div class="mx-auto my-4" style="width: 30%;">
      <div class="form-group my-1">
        <label for="campgroundname">Campground Name:</label>
        <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" id="campgroundname">
      </div>
      <div class="form-group my-1">
          <label for="campgroundprice">Campground Price:</label>
          <input class="form-control" type="number" name="campground[price]" value="<% campground.price %>" id="campgroundprice" min="0.01" step="0.01">
      </div>
      <div class="form-group my-1">
        <label for="imageurl">Image URL:</label>
        <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>" id="imageurl">
      </div>
      <div class="form-group my-1">
        <label for="description">Description:</label>
        <input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>" id="description">
      </div>
      <button type="submit" class="btn btn-secondary btn-block my-4">Submit</button>
      <a href="/campgrounds/<%= campground.id %>">Go Back</a>
    </div>
  </form>

</div>
<% include ../partials/footer %>
